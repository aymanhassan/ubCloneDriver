<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="190dp"
    android:layout_marginBottom="16dp"
    android:foregroundGravity="center"
    android:elevation="2dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            >
            <TextView
                android:id="@+id/cr_time"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="25/10/16 4:33"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:padding="6dp"
                android:gravity="center_horizontal"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/cr_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" SDG"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/cr_status"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:padding="6dp"
                android:gravity="center_horizontal"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="6dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From: "
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/cr_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El Baraha street, Khartoum, Sudan"
                android:textSize="14sp"
                android:textColor="@color/darkText"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sepGray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="6dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To: "
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/cr_dest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khartoum North, Khartoum, Sudan"
                android:textSize="14sp"
                android:textColor="@color/darkText"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sepGray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16dp"
            >
            <TextView
                android:id="@+id/cr_passenger_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Ayman Hassan Salim"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider"
                />
            <TextView
                android:id="@+id/cr_passenger_phone"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="0999999999"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_dark"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sepGray"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sepGray"/>
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes:"/>
            <TextView
                android:id="@+id/cr_notes"
                android:background="@drawable/rounded_corner_light"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thes are notes for the driver. They might be useful .. they probably aren't :P"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sepGray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/cr_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="close" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>