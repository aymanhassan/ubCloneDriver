<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView
        android:id="@+id/signin_username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username : "
        android:background="@color/common_action_bar_splitter"/>
    <EditText
        android:id="@+id/signin_username_input"
        android:layout_width="80dp"
        android:layout_height="18dp"
        android:inputType="textPersonName"
        android:layout_toEndOf="@id/signin_username_textview"
        android:layout_toRightOf="@id/signin_username_textview"/>
    <TextView
        android:id="@+id/signin_password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin_username_textview"
        android:text="Password :" />
    <EditText
        android:id="@+id/signin_password_input"
        android:layout_width="80dp"
        android:layout_height="18dp"
        android:inputType="textPassword"
        android:layout_below="@id/signin_username_input"
        android:layout_toRightOf="@id/signin_password_textview"/>
    <Button
        android:id="@+id/confirm_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>